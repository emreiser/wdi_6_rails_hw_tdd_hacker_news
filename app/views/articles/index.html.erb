<ol>
	<table>
		<tr>
		<th>Articles List</th>
		</tr>
		<% @articles.each do |article| %>
			<tr>
			<td class='short-cell'><li></li></td>
			<td class='short-cell'><%= button_to 'Up vote', new_article_vote_path(article, data: {up: true})  %></td>
			<td class='short-cell'><%= button_to 'Down vote', new_article_vote_path(article, data: {up: false}) %></td>
			<td><%= link_to article.title, article.url, target: '_blank' %></td>
			</tr>
			<tr>
			<td></td>
			<td><%= article.get_votes %> points</td>
			<td><%= link_to "#{article.comments.count} comments", article_path(article) %></td>

			</tr>

		<% end %>
	</table>
</ol>
