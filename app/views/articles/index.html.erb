<table>
	<% @articles.each do |article| %>
		<div class='article'>
			<tr>
				<td class='short-cell up'><div class='btn btn-default up'>
				<%= link_to '', new_article_vote_path(article, data: {up: true}), method: :post, class: 'glyphicon glyphicon-chevron-up' %></div>
				</td>
				<td><h4><%= link_to article.title, article.url, target: '_blank' %></h4></td>
			</tr>
			<tr class='pad-bottom'>
				<td class='down'><div class='btn btn-default'><%= link_to '', new_article_vote_path(article, data: {up: false}), method: :post, class: 'glyphicon glyphicon-chevron-down' %></div></td>
				<td><%= pluralize(article.get_votes, 'point') %> | by <%= article.user.email %> <%= time_ago_in_words(article.created_at) %> | <%= link_to "#{article.comments_count} comments", article_path(article) %></td>
			</tr>
		</div>
	<% end %>
	</ol>
</table>

